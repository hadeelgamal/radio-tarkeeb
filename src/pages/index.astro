---
import Layout from '../layouts/Layout.astro';
import RadioPlayer from '../components/RadioPlayer';
import PillButtonWithHoverIcon from '../components/PillButtonWithHoverIcon';
import SmartDropdownMenu from '../components/SmartDropdownMenu';
import VolumeControl from '../components/VolumeControl';
import SplashScreen from '../components/SplashScreen';
import { stations } from '../data/stations';

const stationNumbers = stations.map(s => s.freq.toFixed(1));
const frequency = 1.0; // Default frequency
---

<Layout title="Radio Tarkeeb">
  <SplashScreen client:load />
  <main class="relative min-h-screen flex flex-col items-center justify-center bg-black text-white">
    <video
      class="absolute inset-0 w-full h-full object-cover opacity-20 z-0"
      playsInline
      muted
      autoPlay
      loop
    >
      <source src="/bg.webm" type="video/webm" />
    </video>
    <RadioPlayer client:load />
  </main>
</Layout>
